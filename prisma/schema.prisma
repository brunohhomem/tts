generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  customer_code String    @id @default(uuid())
  measures      Measure[]

  @@map("customers") // Nome da tabela no PostgreSQL
}

model Measure {
  measure_uuid     String      @id @default(uuid())
  measure_value    Int
  measure_unit     String?
  measure_datetime DateTime
  measure_type     MeasureType // Enum: "WATER" ou "GAS"
  has_confirmed    Boolean     @default(false)
  image_url        String?
  customer_code    String

  customer Customer @relation(fields: [customer_code], references: [customer_code])

  @@map("measures") // Nome da tabela no PostgreSQL
}

enum MeasureType {
  WATER
  GAS
}
